<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp">

    <TextView
        android:id="@+id/tv_fact_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/divider_left"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/first_names" />

    <View
        android:id="@+id/divider_left"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/tv_fact_left"
        app:layout_constraintEnd_toStartOf="@id/tv_fact_center"
        app:layout_constraintTop_toTopOf="@id/tv_fact_left" />

    <TextView
        android:id="@+id/tv_fact_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/first_names" />

    <View
        android:id="@+id/divider_right"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/tv_fact_left"
        app:layout_constraintStart_toEndOf="@id/tv_fact_center"
        app:layout_constraintTop_toTopOf="@id/tv_fact_left" />

    <TextView
        android:id="@+id/tv_fact_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/divider_right"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/first_names" />
</androidx.constraintlayout.widget.ConstraintLayout>