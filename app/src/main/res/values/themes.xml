        <item name="colorDefenderLight">@color/green_700_light</item>
        <item name="colorOnDefenderLight">@color/black</item>
        <item name="colorDefenderDark">@color/green_700_dark</item>
        <item name="colorOnDefenderDark">@color/white</item>

        <item name="colorSpeedster">@color/light_blue_800</item>
        <item name="colorOnSpeedster">@color/white</item>
        <item name="colorSpeedsterLight">@color/light_blue_800_light</item>
        <item name="colorOnSpeedsterLight">@color/black</item>
        <item name="colorSpeedsterDark">@color/light_blue_800_dark</item>
        <item name="colorOnSpeedsterDark">@color/white</item>

        <item name="colorSupporter">@color/amber_300</item>
