<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_pokemon_list"
        android:name="ca.keaneq.uniteguide.ui.pokemonlist.PokemonListFragment"
        android:label="@string/title_pokemon"
        tools:layout="@layout/fragment_pokemon_list" />

    <fragment
        android:id="@+id/navigation_pokemon_detail"
        android:name="ca.keaneq.uniteguide.ui.pokemondetail.PokemonDetailFragment"
        android:label="@string/title_pokemon"
        tools:layout="@layout/fragment_pokemon_list">
        <argument
            android:name="pokemonId"
            app:argType="string"
            app:nullable="false" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="ca.keaneq.uniteguide.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_home"
        android:name="ca.keaneq.uniteguide.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />
</navigation>