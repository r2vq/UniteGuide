<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UniteGuide" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/deep_purple_a700</item>
        <item name="colorPrimaryVariant">@color/deep_purple_a700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_700</item>
        <item name="colorSecondaryVariant">@color/orange_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorBackground">@color/black</item>
        <item name="colorOnBackground">@color/white</item>

        <item name="colorMelee">@color/grey_800</item>
        <item name="colorOnMelee">@color/white</item>
        <item name="colorMeleeLight">@color/grey_800_light</item>
        <item name="colorOnMeleeLight">@color/white</item>
        <item name="colorMeleeDark">@color/grey_800_dark</item>
        <item name="colorOnMeleeDark">@color/white</item>

        <item name="colorRanged">@color/blue_grey_200</item>
        <item name="colorOnRanged">@color/black</item>
        <item name="colorRangedLight">@color/blue_grey_200_light</item>
        <item name="colorOnRangedLight">@color/black</item>
        <item name="colorRangedDark">@color/blue_grey_200_dark</item>
        <item name="colorOnRangedDark">@color/black</item>
    </style>
</resources>